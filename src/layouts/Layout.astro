---
import BaseHead from '../components/BaseHead.astro'
import Header from '../components/Header.astro'
import Footer from '../components/Footer.astro'

import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';

interface Props {
    title?: string;
	description?: string;
	image?: string;
    page_title?: string;
	fullWidth?: boolean;
}

let {
    title = SITE_TITLE,
    description = SITE_DESCRIPTION,
    image = '/favicon.webp',
    page_title,
	fullWidth = false,
} = Astro.props;

if (page_title) {
    title = `${page_title} | ${title}`;
}
---

<!doctype html>
<html lang="en" transition:name="root">
    <head>
        <BaseHead title={title} description={description} image={image} />
        <slot name="head" />
    </head>
    <body>
        <div class="container">
            <Header />
            <noscript>
                <div class="noscript-banner" role="status">
                    This site works better with JavaScript enabled.
                </div>
            </noscript>
            <layout_main class:list={[{ 'full-width': fullWidth }]}>
                <slot />
            </layout_main>
            <Footer />
        </div>
    </body>
</html>

<style>
    body {
        display: flex;
        flex-direction: column;
        min-height: 100vh;
        margin: 0;
    }

    .container {
        display: flex;
        flex-direction: column;
        flex-grow: 1;
    }

    layout_main {
        flex-grow: 1;
    }

    footer {
        margin-top: auto;
    }

    .noscript-banner {
        width: 100%;
        box-sizing: border-box;
        padding: 0.75em 1em;
        background: rgb(var(--gray-lighter));
        border-bottom: 1px solid rgb(var(--gray-light));
        color: rgb(var(--gray-dark));
        text-align: center;
        font-size: 0.95rem;
    }
</style>