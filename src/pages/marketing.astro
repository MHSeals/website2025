<style>
	.gallery {
		display: grid;
		grid-template-columns: repeat(2, 1fr);
		gap: 1.2rem;
		margin-top: 1rem;
		align-items: start;
	}

	.gallery :global(.image) {
		margin-top: 0;
	}

	.gallery :global(.image img) {
		width: 100%;
		height: auto;
		display: block;
	}

	.gallery .tile:not(.hero) :global(.image img) {
		height: 300px;
		object-fit: cover;
		object-position: center;
	}

	.portrait :global(.image img) {
		height: 100%;
		min-height: calc(600px + 1.2rem);
	}

	.hero {
		grid-column: 1 / -1;
	}

	.hero :global(.image img) {
		width: 100%;
		aspect-ratio: 2 / 1;
		object-fit: cover;
		object-position: center;
	}

	.portrait {
		grid-row: span 2;
	}

	@media (max-width: 720px) {
		.gallery {
			grid-template-columns: 1fr;
		}

		.hero :global(.image img) {
			height: 300px;
		}
	}
</style>
